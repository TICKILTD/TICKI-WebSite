block config
  - var current = 'main'
  - var pageTitle = 'TICKI - Compliant Marketing Questions'
  - var productName = "TICKI"

html
  head
    meta(charset="UTF-8")
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    
    title= pageTitle

    link(rel="stylesheet", href="/css/#{current}.css")

    script(src="https://cdn.auth0.com/js/lock/10.3/lock.min.js")

    block head
    
  body

    include nav

    block main
      // page content will come here.

    include footer

    if (typeof(user) !== undefined && user != null) 
      script.
        user = {
          client_id:'#{user._json.app_metadata.tenant_id};'
        }
    

    script(src='/vendor.bundle.js')
    script(src='/js/#{current}.js')

    
      