extends partials/portallayout

append config
  - var current = 'account'
  - var header = 'Account Details'

block head

  style.
    iframe {
      border: none;
      width: 100%;
      height: 460px;
      padding: 0px;
      margin: 0px;
    }

block portal-main

  .row
    .col-xs-12

      h3 Payment Card

      if (selfServiceUrl)
        iframe(scrolling='no', src='#{selfServiceUrl}')
      else
        p
          | No payment card has been set up for your account. 
          +registationLink('qzdqrz6gfrsb', 'ticki-standard', '', '', 'Click here to register')
      
